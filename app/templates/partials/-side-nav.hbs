<header class="header--sidebar">
  <div class="branding">
    <img src="assets/img/branding/logo.png" alt="" class="branding__logo">
    <p class="branding__slogan" data-slogan>{{ t 'side_nav.brand_slogan' }}</p>
  </div>
  {{#link-to "search" (query-params query="null") class="sidebar__search sidebar__section" tagName="div" }}
    {{#link-to "search"
      current-when="search"
      class="sidebar__btn sidebar__btn--search"
      activeClass="sidebar__btn--is--active"}}
      {{ t 'side_nav.search_link' }}
    {{/link-to}}
  {{/link-to}}
  <nav class="sidebar__section sidebar__nav">
    <ul class="nav__list">
      <li class="nav__item__wrap">
        <input type="checkbox" class="nav__item" id="nav__item--profiles" checked>
        <label class="sidebar__btn nav__item__label" for="nav__item--profiles">
          Profiles
        </label>
        <ul class="nav__list--sub">
          {{#link-to "search" (query-params query="null") class="sidebar__btn nav__item--sub" tagName="li" }}
            {{#link-to "search"
              class="sidebar__btn nav__item--sub"}}
              {{ t 'general.locations' }}
            {{/link-to}}
          {{/link-to}}
          {{#link-to "search" (query-params query="null") class="sidebar__btn nav__item--sub" tagName="li" }}
            {{#link-to "search"
              class="sidebar__btn nav__item--sub"}}
              {{ t 'general.products' }}
            {{/link-to}}
          {{/link-to}}
          {{#link-to "search" (query-params query="null") class="sidebar__btn nav__item--sub" tagName="li" }}
            {{#link-to "search"
              class="sidebar__btn nav__item--sub"}}
              {{ t 'general.industries' }}
            {{/link-to}}
          {{/link-to}}
        </ul>
      </li>
      <li class="nav__item__wrap">
        <input type="checkbox" class="nav__item" id="nav__item--builder" checked>
        <label class="sidebar__btn nav__item__label" for="nav__item--builder">
          Graph Builder
        </label>
        <ul class="nav__list--sub">
          {{#link-to "search" (query-params query="null") class="sidebar__btn nav__item--sub" tagName="li" }}
            {{#link-to "search"
              class="sidebar__btn nav__item--sub"}}
              {{ t 'general.locations' }}
            {{/link-to}}
          {{/link-to}}
          {{#link-to "search" (query-params query="null") class="sidebar__btn nav__item--sub" tagName="li" }}
            {{#link-to "search"
              class="sidebar__btn nav__item--sub"}}
              {{ t 'general.products' }}
            {{/link-to}}
          {{/link-to}}
          {{#link-to "search" (query-params query="null") class="sidebar__btn nav__item--sub" tagName="li" }}
            {{#link-to "search"
              class="sidebar__btn nav__item--sub"}}
              {{ t 'general.industries' }}
            {{/link-to}}
          {{/link-to}}
        </ul>
      </li>
      <li class="nav__item__wrap">
        <input type="checkbox" class="nav__item" id="nav__item--about" checked>
        <label class="sidebar__btn nav__item__label" for="nav__item--about">
          About
        </label>
        <ul class="nav__list--sub">
          <li class="sidebar__btn nav__item--sub">Description</li>
          <li class="sidebar__btn nav__item--sub">Glossary</li>
        </ul>
      </li>
      <li class="sidebar__btn">Downloads</li>
    </ul>
  </nav>
  <div class="sidebar__section sidebar__languages">
    <div class="togglemod togglemod--languages">
      <p {{bind-attr class=":toggle__label__text isDefaultLocale::toggle__label--is--active"}}>
        {{otherLanguage}}
      </p>
      {{input
        type='checkbox'
        id='toggle--languages'
        class='toggle toggle--languages'
        checked=isDefaultLocale
        data-language-toggle=''
        }}
      <label class="toggle__label" for="toggle--languages"></label>
      <p {{bind-attr class=":toggle__label__text isDefaultLocale:toggle__label--is--active"}}>
        {{defaultLanguage}}
      </p>
    </div>
  </div>
</header>

