<header {{bind-attr class=":header--pageheader isHomePageRoute:header--pageheader--home"}}>
  <div class="pageheader__bground"></div>
  <div class="pageheader__home__cap"></div>
  <div class="pageheader__wrap">
    <div class="branding">
      {{#if featureToggle.showDatlas }}
        {{#link-to "index"}}
          <img src="assets/img/branding/datlas-white.svg" alt="Datlas" class="branding__logo">
        {{/link-to}}
      {{else}}
        {{#link-to "index" class="pageheader__title"}}
          {{t 'pageheader.alternative_title' }}
        {{/link-to}}
      {{/if}}
    </div>
    <nav class="pageheader__nav">
      <div class="togglemod togglemod--languages">
        <p {{bind-attr class=":toggle__label__text isDefaultLocale::toggle__label--is--active"}}>
          {{otherLanguage}}
        </p>
        {{input
          type='checkbox'
          id='toggle--languages'
          class='toggle toggle--languages'
          checked=isDefaultLocale
          data-language-toggle=''
          }}
        <label class="toggle__label" for="toggle--languages"></label>
        <p {{bind-attr class=":toggle__label__text isDefaultLocale:toggle__label--is--active"}}>
          {{defaultLanguage}}
        </p>
      </div>
    </nav>
    <div class="pageheader__menu">
      <ul>
        <li>
          {{#link-to "rankings"
            class="pageheader__menu__item"
            activeClass="pageheader__menu__item--active"
            data-side-search-link='about'
          }}
            {{ t 'pageheader.rankings' }}
          {{/link-to}}
        </li>
        <li>
          {{#link-to "about.project-description"
            class="pageheader__menu__item"
            activeClass="pageheader__menu__item--active"
            data-side-search-link='about'
          }}
            {{ t 'pageheader.about' }}
          {{/link-to}}
        </li>
        <li>
          {{#link-to "about.glossary"
            class="pageheader__menu__item"
            activeClass="pageheader__menu__item--active"
            data-side-search-link='glossary'
          }}
            {{ t 'general.glossary' }}
          {{/link-to}}
        </li>
        <li>
          {{#if featureToggle.show_downloads }}
            {{#link-to "downloads"
              current-when="downloads"
              class="pageheader__menu__item"
              activeClass="pageheader__menu__item--active"
              data-side-search-link='data'
            }}
              {{ t 'pageheader.download' }}
            {{/link-to}}
          {{/if}}
        </li>
      </ul>
    </div>

    {{#if isHomePageRoute }}
      {{!-- special display of introductory text on index --}}
      <div class="pageheader__homeintro">
        <header class="index__header__wrap">
          <div class="stream__header index__header">
            <h1 class="stream__head index__head">{{ t 'index.header_h1' }}</h1>
            <h2 class="stream__subhead">{{ t 'index.header_subhead' }}</h2>
          </div>
        </header>

        <form class="search__wrap">
          <div class="search__field__wrap">
            {{input
              class="search"
              placeholder=( t 'pageheader.search_placeholder' )
              value=query
              enter='query'
              target=controllers.search
              required='required'
            }}
            <button class="search__reset fa fa-close" type="reset"></button>
          </div>
          <input class="search__submit btn btn--standalone btn--search"
            type="submit"
            value="{{ t 'pageheader.search_link' }}"
            {{action 'query' query target=controllers.search}}
          >
        </form>
      </div>
    {{/if}}
  </div>
</header>

