<div class='explanation'>
  <h4 class='explanation__title'>{{t 'graph_builder.explanation'}}</h4>

  <div {{bind-attr class=':explanation__copy showAll:explanation__copy--show:explanation__copy--hide'}}>
    <p class='explanation__p'>{{text}}</p>
  </div>

  {{#if isTextLarge}}
    <button {{action 'toggleText'}} class='btn btn--standalone explanation__btn'>
      {{t buttonText}}
    </button>
  {{/if}}
</div>

