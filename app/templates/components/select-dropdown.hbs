<div class="index__dropdown__wrap">
  <fieldset>
    <select name={{type}}>
      {{#each collection as |item|}}
        <option value={{item.id}} selected={{is-equal selected item.id}} >
          {{#if addCode}}
            {{item.name}}, {{item.code}}
          {{else}}
            {{item.name}}
          {{/if}}
        </option>
      {{/each}}
    </select>
  </fieldset>
</div>

