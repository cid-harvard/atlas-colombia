<div class="container-fluid px-md-x10 my-md-5 py-md-5 my-sm-1 py-sm-1">
  <div class="row row-without-margin d-flex align-items-center">
    <header class="stream__header">
        <h2 class="title_yellow d-inline" style="font-size: 6rem;">{{ pageTitle }}</h2>
    </header>
  </div>
  <section class="stream__section">
    <p class="text-white">
      {{ t 'rankings.intro.p' }}
    </p>
  </section>
  <section class="stream__section">
    <h3 class='title_yellow'>{{ t 'rankings.section.departments' }}</h3>
    {{
    datlas-table
      data=model.departments
      source="departmentRankings"
      elementId="departmentsTable"
    }}
  </section>

  {{#if featureToggle.showCities }}
    <section class="stream__section">
      <h3 class='title_yellow'>{{ t 'rankings.section.cities' }}</h3>
      {{
      datlas-table
        data=model.msas
        source="msaRankings"
        elementId="citiesTable"
      }}
    </section>
  {{/if}}

</div>


